{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "removeComments": true,
    "module": "es6",
    "target": "es6"
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}